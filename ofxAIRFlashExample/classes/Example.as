package  {		import of.addons.ofxAIR.*;	import flash.display.Sprite;	import flash.events.MouseEvent;	import com.adobe.serialization.json.*;		public class Example extends Sprite {				public var drawing:Sprite;		public var mousePointer:MousePointer;				public function Example() {			createChildren();						stage.addEventListener(MouseEvent.MOUSE_MOVE, onMouseMoved);						ofxAIR.addEventListener(ofxAIREvent.RECEIVED, onMessage);			ofxAIR.start("/../ofxAirExample/bin/", "emptyExampleDebug.app");					}				private function createChildren():void {			mousePointer = new  MousePointer();			addChild(mousePointer);						drawing = new Sprite();			addChild(drawing);		}				private function onMouseMoved(e:MouseEvent):void {			if(mouseX>stage.stageWidth || mouseX<0)				return;							if(mouseY>stage.stageHeight || mouseY<0)				return;						drawMouseAndLine(mouseX, mouseY);						var params:Object = {x:mouseX, y:mouseY};			var json_str:String = JSON.encode(params);			ofxAIR.write(json_str);		}				private function onMessage(e:ofxAIREvent):void {			if(e.data.type=="Clear") {				drawing.graphics.clear();			}						if(e.data.type=="MousePos") {				drawMouseAndLine(e.data.x, e.data.y);			}		}				private function drawMouseAndLine(xPos:Number, yPos:Number):void {			drawing.graphics.lineStyle(1,0x000000);			drawing.graphics.lineTo(xPos, yPos);						mousePointer.x = xPos;			mousePointer.y = yPos;		}	}	}